@using TextShare.Domain.Models.EntityModels.UserModels
@model UserModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <div class="d-flex align-items-start">
        <!-- Левая колонка: Фото -->
        <div class="me-4">
            <img src="@(Model.AvatarUri ?? "/DefaultImages/default_user.png")"
                 class="img-fluid rounded-circle border"
                 alt="Аватар"
                 style="width: 150px; height: 150px; object-fit: cover;">
        </div>

        <!-- Правая колонка: Информация + Кнопка -->
        <div class="flex-grow-1">
            <!-- Юзернейм (жирный) -->
            <h3>@Model.UserName</h3>

            <!-- Имя, Отчество, Фамилия (в одну строку) -->
            <p class="fw-bold mb-1">@Model.FirstName @Model.Patronymic @Model.LastName</p>

            <!-- Описание -->
            @if (!string.IsNullOrEmpty(Model.SelfDescription))
            {
                <p class="text-muted">@Model.SelfDescription</p>
            }
            else
            {
                <p class="text-muted">Описание отсутствует.</p>
            }

            <!-- Кнопка изменения данных (прижата вправо) -->
            <div class="text-end">
                <a asp-action="UpdateUser" asp-controller="User"
                   class="btn-outline-primary">Изменить данные</a>
            </div>
        </div>
    </div>
</div>
