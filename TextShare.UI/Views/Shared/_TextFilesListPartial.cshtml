@using TextShare.Domain.Models.EntityModels.TextFileModels
@model List<TextFileDetailShortModel>

@if (!Model.Any())
{
    <p>Нет доступных файлов.</p>
}
else
{
    <ul class="list-group">
        @foreach (var file in Model)
        {
            <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center p-3">
                <div class="text-break w-100 w-md-75 mb-2 mb-md-0">
                    <strong>@file.OriginalFileName</strong>
                    <p class="mb-0">Размер: @((file.Size / (1024.0 * 1024)).ToString("0.##")) MB</p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Download" asp-controller="TextFile" asp-route-uniquename="@file.UniqueFileNameWithoutExtension"
                       class="btn btn-outline-success btn-sm">Скачать</a>

                    <a asp-action="DetailTextFile" asp-controller="TextFile" asp-route-uniquename="@file.UniqueFileNameWithoutExtension"
                       class="btn btn-outline-primary btn-sm">Подробнее</a>
                </div>
            </li>
        }
    </ul>
}
