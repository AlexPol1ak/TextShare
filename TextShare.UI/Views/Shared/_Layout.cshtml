<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TextShare</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <!--  CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">TextShare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Index">
                                    <i class="fas fa-user"></i> Моя страница
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Shelves/Index">
                                    <i class="fas fa-book"></i> Полки
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Friends/Index">
                                    <i class="fas fa-users"></i> Друзья
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Groups/Index">
                                    <i class="fas fa-users"></i> Группы
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">
                                    <i class="fas fa-sign-out-alt"></i> Выход
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Войти
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Регистрация
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <div class="container mt-3">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container-fluid">
            <p class="footer-text"><a href="/Home/About" class="text-white">О приложении</a></p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>