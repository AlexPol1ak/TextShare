@using TextShare.Domain.Models.EntityModels.GroupModels
@model GroupDeleteModel
@{
    ViewData["Title"] = "Удалить группу";
}

<h2>Удалить группу @Model.Name</h2>
<h3>Количество участников в группе: @Model.CountMembers</h3>
<form asp-action="DeleteGroup" asp-controller="Groups" asp-route-groupId="@Model.GroupId" method="post"
      onsubmit="return confirm('Вы уверены, что хотите удалить группу? Это действие нельзя отменить.');"
      class="d-inline">
    <button type="submit" class="btn btn-danger mt-2">Удалить группу</button>
    <a asp-action="DetailGroup" asp-controller="Groups" asp-route-groupId="@Model.GroupId" class="btn btn-secondary mt-2">Отмена</a>
</form>


