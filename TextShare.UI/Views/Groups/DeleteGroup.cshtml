@using TextShare.Domain.Models.EntityModels.GroupModels
@model GroupDeleteModel
@{
    ViewData["Title"] = "Удалить группу";
}

<h2>Удалить группу @Model.Name</h2>
<h3>Количество участников в группе: @Model.CountMembers</h3>
<form asp-action="DeleteGroup" asp-controller="Groups" asp-route-id="@Model.GroupId" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Удалить</button>
</form>
<a asp-action="DetailGroup" asp-controller="Shelves" asp-route-id="@Model.GroupId" class="btn btn-secondary mt-3">Отмена</a>

