@{
    IPagedList<Shelf> shelves = Model;
}

<div class="d-flex align-items-start">
    <!-- Ссылки слева -->
    <div class="w-20 ms-0 ps-2">
        <partial name="_ShelvesLinksPartial" />
    </div>

    <!-- Полки справа -->
    <div class="w-80 ms-5">
        <h2>Мои полки</h2>

        @if (shelves.TotalItemCount > 0)
        {
            int shelfCounter = 1; 
            @foreach (var shelf in shelves) 
            {
                <p>@shelfCounter. <a asp-controller="Shelves" 
                                   asp-action="DetailShelf" 
                                   asp-route-id="@shelf.ShelfId">
                                    @shelf.Name
                                  </a>
                </p>
                shelfCounter++; 
            }
            @Html.PagedListPager(shelves, page => Url.Action("MyShelves", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        }
        else
        {
            <p>У вас пока нет полок</p>
        }
    </div>
</div>
