@model TextShare.Domain.Models.EntityModels.ShelfModels.ShelfDetailModel

@{
    ViewData["Title"] = "Детальная информация о полке";
}

<h2>@Model.Name</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Описание</h5>
        <p class="card-text">@Model.Description</p>

        <h5 class="card-title">Дата создания</h5>
        <p class="card-text">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>

        <h5 class="card-title">Автор</h5>
        <p class="card-text">@Model.Creator.UserName</p>

        @if (!string.IsNullOrEmpty(Model.ImageUri))
        {
            <h5 class="card-title">Изображение</h5>
            <img src="@Model.ImageUri" alt="Изображение полки" class="img-fluid" style="max-width: 300px; border-radius: 10px;">
        }
      
    </div>
</div>

<a asp-action="EditShelf" asp-route-id="@Model.ShelfId" class="btn btn-primary mt-3">Редактировать</a>
<a asp-action="DeleteShelf" asp-controller="Shelves" asp-route-id="@Model.ShelfId" class="btn btn-danger mt-3">Удалить</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
