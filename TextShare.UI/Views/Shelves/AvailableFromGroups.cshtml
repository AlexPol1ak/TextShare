@{
    IPagedList<Shelf> shelves = Model;
}

<div class="d-flex align-items-start">
    <!-- Ссылки слева -->
    <div class="w-20 ms-0 ps-2">
        <partial name="_ShelvesLinksPartial" />
    </div>

    <!-- Полки справа -->
    <div class="w-80 ms-5">
        <h2>Доступные полки из групп </h2>       

        @if (shelves.TotalItemCount > 0)
        {
            <h3>Этими полками  поделились участники групп, в которых вы состоите.</h3>

            await Html.RenderPartialAsync("_ShelvesListPartial", shelves.ToList());

            Html.PagedListPager(
            shelves,
            page => Url.Action("AvailableFromFriends",
            new { page }),
            PagedListRenderOptions.OnlyShowFivePagesAtATime
            );
        }
        else
        {
            <p>Нет доступных полок</p>
        }
    </div>
</div>
